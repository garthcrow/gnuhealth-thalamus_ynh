#!/bin/bash
set -eu -o pipefail

# helpers YunoHost
source /usr/share/yunohost/helpers

# chemin absolu du dossier scripts/
SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
source "$SCRIPT_DIR/_common.sh"

set -eu
source /usr/share/yunohost/helpers
source ./scripts/_common.sh

# Exemple : remettre à jour thalamus dans le venv
ynh_exec_as_app bash -lc "$install_dir/venv/bin/pip install --upgrade thalamus flask-cors"
systemctl restart "$app"